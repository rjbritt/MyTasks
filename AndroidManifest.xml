        <activity
            android:name="com.cpsc481.mytasks.AddTask"
            android:label="@string/title_activity_add_item" >
        </activity>
        <activity
            android:name="com.cpsc481.mytasks.DueTimePickerFragment"
            android:label="@string/title_activity_time_picker_dialog" >
