        <activity
            android:name="com.cpsc481.mytasks.ShowTask"
            android:label="@string/title_activity_show_task" >
        </activity>
        <activity
            android:name="com.cpsc481.mytasks.Reports"
            android:label="@string/title_activity_reports" >
